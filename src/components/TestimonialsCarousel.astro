---
const features5 = [
  {
    additionaltext: 'Explore Dashboard',
    content:
      'View your sustainability score and track your progress over time.',
    text: 'Personal Dashboard',
  },
  {
    additionaltext: 'Start Logging',
    content:
      'Easily record your daily eco-friendly actions and see their immediate impact.',
    text: 'Action Logging',
  },
  {
    additionaltext: 'View Rewards',
    content:
      'Earn eco-tokens for green actions, redeem for eco-products.',
    text: 'Reward System',
  },
  {
    additionaltext: 'Join a Challenge',
    content:
      'Join eco-challenges and compete with friends to amplify your positive impact.',
    text: 'Community Challenges',
  },
  {
    additionaltext: 'View Your Impact',
    content:
      'Visualize your environmental impact with interactive graphs.',
    text: 'Impact Visualization',
  },
  {
    additionaltext: 'Get Personalized Tips',
    content:
      'Get personalized tips to boost your sustainability score.',
    text: 'Personalized Tips',
  },
]
---

<!-- Testimonials carousel -->
<section>
  <div class="mx-auto max-w-6xl px-4 sm:px-6">
    <div class="pt-12 md:pt-20">
      <!-- Section header -->
      <div class="mx-auto max-w-3xl pb-12 text-center md:pb-20">
        <div>
          <div
            class="inline-flex bg-gradient-to-r from-purple-500 to-purple-200 bg-clip-text pb-3 font-medium text-transparent"
          >
            The Sustainability-First Platform
          </div>
        </div>
        <h2
          class="h2 bg-gradient-to-r from-slate-200/60 via-slate-200 to-slate-200/60 bg-clip-text pb-4 text-transparent"
        >
          Track Your Impact Faster
        </h2>
        <p class="text-lg text-slate-400">
          EcoLedger makes it easy to monitor and improve your environmental
          footprint. Our intuitive platform helps you identify areas for
          improvement and celebrates your eco-friendly achievements.
        </p>
      </div>

      <!-- Carousel built with Swiper.js [https://swiperjs.com/] -->
      <!-- * Initialized in src/js/main.js -->
      <!-- * Custom styles in src/css/additional-styles/theme.scss -->
      <div
        class="relative before:absolute before:inset-0 before:z-20 before:-translate-x-full before:bg-gradient-to-l before:from-transparent before:to-slate-900 before:to-20% after:absolute after:inset-0 after:z-20 after:translate-x-full after:bg-gradient-to-r after:from-transparent after:to-slate-900 after:to-20%"
      >
        <div class="stellar-carousel swiper-container group">
          <div class="swiper-wrapper w-fit" data-highlighter>
            <!-- Carousel items -->
<!-- Carousel items -->
{features5.map((feature) => (
  <div
    class="swiper-slide group/slide relative h-auto overflow-hidden rounded-3xl bg-slate-800 p-px before:pointer-events-none before:absolute before:-left-48 before:-top-48 before:z-30 before:size-96 before:translate-x-[var(--mouse-x)] before:translate-y-[var(--mouse-y)] before:rounded-full before:bg-purple-500 before:opacity-0 before:blur-[100px] before:transition-opacity before:duration-500 after:absolute after:inset-0 after:z-10 after:rounded-[inherit] after:opacity-0 after:transition-opacity after:duration-500 after:[background:_radial-gradient(250px_circle_at_var(--mouse-x)_var(--mouse-y),theme(colors.slate.400),transparent)] before:hover:opacity-20 after:group-hover:opacity-100"
  >
    <div
      class="relative z-20 h-full overflow-hidden rounded-[inherit] bg-slate-900"
    >
      <!-- Particles animation -->
      <div
        class="absolute inset-0 -z-10 opacity-0 transition-opacity duration-500 ease-in-out group-hover/slide:opacity-100 group-[.swiper-slide-active]/slide:opacity-100"
        aria-hidden="true"
      >
        <canvas data-particle-animation data-particle-quantity="3"></canvas>
      </div>
      <!-- Radial gradient -->
      <div
        class="pointer-events-none absolute bottom-0 left-1/2 -z-10 aspect-square w-1/3 -translate-x-1/2 translate-y-1/2"
        aria-hidden="true"
      >
        <div
          class="translate-z-0 absolute inset-0 rounded-full bg-slate-800 blur-[60px] transition-colors duration-500 ease-in-out group-[.swiper-slide-active]/slide:bg-purple-500"
        >
        </div>
      </div>
      <div class="flex h-full flex-col p-6">
        <img
          class="mb-3"
          src="./images/carousel-icon-01.svg"
          width="56"
          height="56"
          alt="Icon 01"
        />
        <div class="grow">
          <div class="mb-1 text-lg font-bold">{feature.text}</div>
          <div class="mb-3 text-slate-400">
            {feature.content}
          </div>
        </div>
     
      </div>
    </div>
  </div>
))}


          </div>
        </div>
      </div>

      <!-- Arrows -->
      <div class="mt-8 flex justify-end">
        <button
          class="carousel-prev group relative z-20 flex size-12 items-center justify-center"
        >
          <span class="sr-only">Previous</span>
          <svg
            class="size-4 fill-slate-500 transition duration-150 ease-in-out group-hover:fill-purple-500"
            viewBox="0 0 16 16"
            xmlns="http://www.w3.org/2000/svg"
          >
            <path d="M6.7 14.7l1.4-1.4L3.8 9H16V7H3.8l4.3-4.3-1.4-1.4L0 8z"
            ></path>
          </svg>
        </button>
        <button
          class="carousel-next group relative z-20 flex size-12 items-center justify-center"
        >
          <span class="sr-only">Next</span>
          <svg
            class="size-4 fill-slate-500 transition duration-150 ease-in-out group-hover:fill-purple-500"
            viewBox="0 0 16 16"
            xmlns="http://www.w3.org/2000/svg"
          >
            <path d="M9.3 14.7l-1.4-1.4L12.2 9H0V7h12.2L7.9 2.7l1.4-1.4L16 8z"
            ></path>
          </svg>
        </button>
      </div>
    </div>
  </div>
</section>
