---
// import Auth from '@components/Auth.astro'
import AccountButton from '@components/ConnectWallet'
import { SignOutButton } from '@clerk/astro/components'
---

<!-- Site header -->
<header class="absolute z-30 w-full">
  <div class="mx-auto max-w-6xl px-4 sm:px-6">
    <div class="flex h-16 items-center justify-between md:h-20">
      <!-- Site branding -->
      <div class="flex-1">
        <!-- Logo -->
        <a aria-label="EcoLedger" class="inline-flex" href="/">
          <img
            alt="Stellar"
            class="max-w-none"
            height="38"
            src="./images/logo.svg"
            width="38"
          />
        </a>
      </div>

      <!-- Desktop navigation -->
      <nav class="hidden md:flex md:grow">
        <!-- Desktop menu links -->
        <ul class="flex flex-wrap items-center justify-center grow">
          <li>
            <a
              class="mx-4 text-sm font-medium text-slate-300 transition duration-150 ease-in-out hover:text-white lg:mx-5"
              href="about.html">About</a
            >
          </li>
          <li>
            <a
              class="mx-4 text-sm font-medium text-slate-300 transition duration-150 ease-in-out hover:text-white lg:mx-5"
              href="integrations.html">Integrations</a
            >
          </li>
          <li>
            <a
              class="mx-4 text-sm font-medium text-slate-300 transition duration-150 ease-in-out hover:text-white lg:mx-5"
              href="pricing.html">Pricing</a
            >
          </li>
          <li>
            <a
              class="mx-4 text-sm font-medium text-slate-300 transition duration-150 ease-in-out hover:text-white lg:mx-5"
              href="customers.html">Customers</a
            >
          </li>
          <li>
            <a
              class="mx-4 text-sm font-medium text-slate-300 transition duration-150 ease-in-out hover:text-white lg:mx-5"
              href="changelog.html">Changelog</a
            >
          </li>
        </ul>
      </nav>

      <!-- Desktop sign in links -->
      <ul class="flex flex-1 items-center justify-end">
        <AccountButton client:load />
        <SignOutButton id="sign-out" class="hidden" />
      </ul>

      <!-- Mobile menu -->
      <div
        class="ml-4 flex items-center md:hidden"
        x-data="{ expanded: false }"
      >
        <!-- Hamburger button -->
        <button
          class="hamburger"
          :class="{ 'active': expanded }"
          @click.stop="expanded = !expanded"
          aria-controls="mobile-nav"
          :aria-expanded="expanded"
        >
          <span class="sr-only">Menu</span>
          <svg
            class="size-5 fill-current text-slate-300 transition duration-150 ease-in-out hover:text-white"
            viewBox="0 0 20 20"
            xmlns="http://www.w3.org/2000/svg"
          >
            <rect y="2" width="20" height="2" rx="1"></rect>
            <rect y="9" width="20" height="2" rx="1"></rect>
            <rect y="16" width="20" height="2" rx="1"></rect>
          </svg>
        </button>

        <!-- Mob
        <!-- Mobile navigation -->
        <nav
          id="mobile-nav"
          class="absolute left-0 top-full z-20 w-full overflow-hidden px-4 transition-all duration-300 ease-in-out sm:px-6"
          x-ref="mobileNav"
          :style="expanded ? 'max-height: ' + $refs.mobileNav.scrollHeight + 'px; opacity: 1' : 'max-height: 0; opacity: .8'"
          @click.outside="expanded = false"
          @keydown.escape.window="expanded = false"
          x-cloak
        >
          <ul
            class="rounded-lg border border-transparent px-4 py-1.5 [background:linear-gradient(theme(colors.slate.900),_theme(colors.slate.900))_padding-box,_conic-gradient(theme(colors.slate.400),_theme(colors.slate.700)_25%,_theme(colors.slate.700)_75%,_theme(colors.slate.400)_100%)_border-box]"
          >
            <li>
              <a
                class="flex py-1.5 text-sm font-medium text-slate-300 hover:text-white"
                href="about.html">About</a
              >
            </li>
            <li>
              <a
                class="flex py-1.5 text-sm font-medium text-slate-300 hover:text-white"
                href="integrations.html">Integrations</a
              >
            </li>
            <li>
              <a
                class="flex py-1.5 text-sm font-medium text-slate-300 hover:text-white"
                href="pricing.html">Pricing</a
              >
            </li>
            <li>
              <a
                class="flex py-1.5 text-sm font-medium text-slate-300 hover:text-white"
                href="customers.html">Customers</a
              >
            </li>
            <li>
              <a
                class="flex py-1.5 text-sm font-medium text-slate-300 hover:text-white"
                href="changelog.html">Changelog</a
              >
            </li>
          </ul>
        </nav>
      </div>
    </div>
  </div>
</header>
